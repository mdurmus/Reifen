@model Brand

    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Bearbeiten @Model.Name</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-controller="Home" asp-action="EditBrand" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" asp-for="Name">
                    </div>
                    <div class="form-group">
                       <input type="hidden" name="BrandId" value="@Model.BrandId" />
                    </div>
              
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-warning btn-block">Speichern</button>
                </div>
            </form>
        </div>
    </div>